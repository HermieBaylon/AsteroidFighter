<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Activity_Menu_Credits"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Instructions"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Game"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Main"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Activity_Game_Over"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Modes"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Backstory1"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Backstory2"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".Activity.Activity_Menu_Backstory3"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>