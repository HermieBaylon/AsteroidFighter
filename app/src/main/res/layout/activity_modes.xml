<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_Menu_Modes">

    <ImageView
        android:id="@+id/Step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/main_menu_background"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Please Choose Mode"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="120px" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    <TextView
        android:id="@+id/novice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:saveEnabled="true"
        android:state_enabled="true"
        android:state_focused="true"
        android:state_pressed="true"
        android:text="NOVICE"
        android:textColor="@color/text_color"
        android:textSize="100px" />

    <TextView
        android:id="@+id/intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:saveEnabled="true"
        android:state_enabled="true"
        android:state_focused="true"
        android:state_pressed="true"
        android:text="INTERMEDIATE"
        android:textColor="@color/text_color"
        android:textSize="100px" />

    <TextView
        android:id="@+id/advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:saveEnabled="true"
        android:state_enabled="true"
        android:state_focused="true"
        android:state_pressed="true"
        android:text="ADVANCED"
        android:textColor="@color/text_color"
        android:textSize="100px" />

    <TextView
        android:id="@+id/endless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:saveEnabled="true"
        android:state_enabled="true"
        android:state_focused="true"
        android:state_pressed="true"
        android:text="ENDLESS"
        android:textColor="@color/text_color"
        android:autoSizeTextType="uniform"
        android:textSize="100px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/backToMain"
        android:layout_width="96dp"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:src="@drawable/previous1" />


</RelativeLayout>